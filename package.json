    "async": "^2.1.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "boom": "^4.2.0",
    "dotenv": "^2.0.0",
    "good": "^7.0.2",
    "good-console": "^6.1.3",
    "good-squeeze": "^5.0.0",
